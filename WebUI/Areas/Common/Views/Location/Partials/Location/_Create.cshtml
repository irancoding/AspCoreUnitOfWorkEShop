        </div>
    </div>
</form>

<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.unobtrusive.min.js"></script>
<script>
    failedAjax = function (response) {
        notify(response.Message, "error", "bottom-center");
    };
    successAjax = function (response) {
        if (response.Result) {
            closeModal();
            $('#treelist').data('kendoTreeList').dataSource.read();
        }
        else {
            notify(response.Message, "error", "bottom-center");
        }

    };

    function submit_Form_Create_Location_Common() {
        $('#form_Create_Location_Common').submit();
    }
</script>
